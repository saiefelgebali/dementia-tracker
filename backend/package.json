{
	"name": "nodejs-rest-api",
	"version": "1.0.0",
	"main": "dist/app.js",
	"author": "saiefelgebali",
	"license": "MIT",
	"scripts": {
		"start": "npm run build && cross-env NODE_ENV=production node -r dotenv/config --unhandled-rejections=strict ./dist/app.js",
		"dev": "cross-env NODE_ENV=development nodemon -r dotenv/config ./src/app.ts",
		"test": "cross-env NODE_ENV=test mocha -r dotenv/config -r ts-node/register 'test/**/*.test.ts' --unhandled-rejections=strict",
		"build": "tsc",
		"database": "docker-compose up -d"
	},
	"dependencies": {
		"bcrypt": "^5.0.1",
		"cors": "^2.8.5",
		"debug": "^4.3.2",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-validator": "^6.12.1",
		"helmet": "^4.6.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.13.7",
		"shortid": "^2.2.16"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/chai": "^4.2.21",
		"@types/cors": "^2.8.12",
		"@types/debug": "^4.1.7",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.5",
		"@types/mocha": "^9.0.0",
		"@types/shortid": "^0.0.29",
		"@types/supertest": "^2.0.11",
		"chai": "^4.3.4",
		"cross-env": "^7.0.3",
		"mocha": "^9.1.0",
		"nodemon": "^2.0.12",
		"supertest": "^6.1.6",
		"ts-node": "^10.2.1",
		"typescript": "^4.3.5"
	}
}
